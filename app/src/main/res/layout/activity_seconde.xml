<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"

    tools:openDrawer="start">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/linear_setting"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/colorPrimary"
                android:orientation="horizontal"
                android:visibility="visible">


                <ImageView
                    android:id="@+id/menu"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    app:srcCompat="@drawable/logo" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toEndOf="@+id/menu"
                    android:gravity="center_vertical"
                    android:text="Shop My Influence"
                    android:textColor="@color/blan"
                    android:textSize="17sp"
                    android:fontFamily="@font/regular"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/blan"
                    android:textSize="26sp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/linear_setting"
                android:layout_margin="2dp"
                android:background="@color/white"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2.4"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv_slider_mainActivity"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentTop="true"

                                android:layout_margin="13dp"
                                app:cardCornerRadius="8dp">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">


                                    <ImageView
                                        android:scaleType="fitXY"
                                        android:layout_width="match_parent"
                                        android:layout_height="200dp"
                                        android:id="@+id/image_marque"
                                        />


                                    <RelativeLayout
                                        android:layout_marginTop="5dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:paddingLeft="10dp">

                                        <TextView

                                            android:id="@+id/txt_nom_marque"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:fontFamily="@font/bold"
                                            android:text="NIKE"
                                            android:textSize="30sp" />



                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_marginTop="5dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:paddingLeft="10dp">

                                        <TextView

                                            android:id="@+id/txt_desc_marque"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:fontFamily="@font/regular"
                                            android:text="NIKE"
                                            android:textSize="20sp" />



                                    </RelativeLayout>


                                    <TableLayout

                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp">

                                        <TableRow
                                            android:layout_width="fill_parent"
                                            android:layout_height="fill_parent"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginRight="10dp">


                                            <LinearLayout
                                                android:layout_width="0dp"

                                                android:layout_height="fill_parent"
                                                android:layout_marginLeft="10dp"
                                                android:layout_marginTop="7dp"
                                                android:layout_marginRight="10dp"
                                                android:layout_weight="1"
                                                android:background="@drawable/rounded_corner"
                                                android:backgroundTint="@color/bleu_dark"
                                                android:orientation="vertical"
                                                tools:targetApi="lollipop">

                                                <LinearLayout
                                                    android:layout_width="fill_parent"
                                                    android:layout_height="wrap_content">

                                                    <TextView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginLeft="10dp"
                                                        android:layout_marginTop="8dp"
                                                        android:fontFamily="@font/regular"
                                                        android:text="Chiffres d'affaire"
                                                        android:gravity="center"
                                                        android:textColor="@color/blan"
                                                        android:textSize="15sp" />

                                                    <TextView
                                                        android:layout_width="fill_parent"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginTop="8dp"
                                                        android:layout_marginRight="10dp"
                                                        android:gravity="end"
                                                        android:text=""
                                                        android:textColor="@color/blan"
                                                        android:textSize="14sp"
                                                        android:textStyle="bold" />

                                                </LinearLayout>

                                                <TextView
                                                    android:id="@+id/txt_ca"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center"
                                                    android:layout_marginTop="20dp"
                                                    android:layout_marginBottom="8dp"
                                                    android:gravity="center"
                                                    android:text="-"
                                                    android:textColor="#FFFFFF"
                                                    android:textSize="20dp"
                                                    android:textStyle="bold" />

                                            </LinearLayout>


                                        </TableRow>


                                    </TableLayout>

                                    <TableLayout

                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp">

                                        <TableRow
                                            android:layout_width="fill_parent"
                                            android:layout_height="fill_parent"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginRight="10dp">

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="fill_parent"
                                                android:layout_marginLeft="10dp"
                                                android:layout_marginTop="7dp"
                                                android:layout_marginRight="10dp"
                                                android:layout_weight="1"
                                                android:background="@drawable/rounded_corner"
                                                android:backgroundTint="@color/themePurple"
                                                android:orientation="vertical"
                                                tools:targetApi="lollipop">

                                                <LinearLayout
                                                    android:layout_width="fill_parent"
                                                    android:layout_height="wrap_content">

                                                    <TextView
                                                        android:layout_width="match_parent"
                                                        android:gravity="center"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginLeft="10dp"
                                                        android:layout_marginTop="8dp"
                                                        android:fontFamily="@font/regular"
                                                        android:text="Commisions"
                                                        android:textColor="@color/blan"
                                                        android:textSize="15sp" />

                                                    <TextView
                                                        android:layout_width="fill_parent"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginTop="8dp"
                                                        android:layout_marginRight="10dp"
                                                        android:gravity="end"
                                                        android:text=""
                                                        android:textColor="@color/blan"
                                                        android:textSize="10sp"
                                                        android:textStyle="bold"
                                                        tools:ignore="SmallSp" />

                                                </LinearLayout>

                                                <TextView
                                                    android:id="@+id/txt_commision"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="20dp"
                                                    android:layout_marginBottom="8dp"
                                                    android:text="-"
                                                    android:gravity="center"
                                                    android:textColor="@color/blan"
                                                    android:textSize="20dp"
                                                    android:textStyle="bold" />

                                            </LinearLayout>



                                        </TableRow>


                                    </TableLayout>
                                    <TableLayout

                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp">

                                        <TableRow
                                            android:layout_width="fill_parent"
                                            android:layout_height="fill_parent"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginRight="10dp">

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="fill_parent"
                                                android:layout_marginLeft="10dp"
                                                android:layout_marginTop="7dp"
                                                android:layout_marginRight="10dp"
                                                android:layout_weight="1"
                                                android:background="@drawable/rounded_corner"
                                                android:backgroundTint="@color/themeOrange"
                                                android:orientation="vertical"
                                                tools:targetApi="lollipop">

                                                <LinearLayout
                                                    android:layout_width="fill_parent"
                                                    android:layout_height="wrap_content">

                                                    <TextView
                                                        android:layout_width="match_parent"
                                                        android:gravity="center"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginLeft="10dp"
                                                        android:layout_marginTop="8dp"
                                                        android:fontFamily="@font/regular"
                                                        android:text="Nombre de ventes"
                                                        android:textColor="@color/blan"
                                                        android:textSize="15sp" />

                                                    <TextView
                                                        android:layout_width="fill_parent"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginTop="8dp"
                                                        android:layout_marginRight="10dp"
                                                        android:gravity="end"
                                                        android:text=""
                                                        android:textColor="@color/blan"
                                                        android:textSize="10sp"
                                                        android:textStyle="bold"
                                                        tools:ignore="SmallSp" />

                                                </LinearLayout>

                                                <TextView
                                                    android:id="@+id/txt_nombre_vente"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="20dp"
                                                    android:layout_marginBottom="8dp"
                                                    android:text="-"
                                                    android:gravity="center"
                                                    android:textColor="@color/blan"
                                                    android:textSize="20dp"
                                                    android:textStyle="bold" />

                                            </LinearLayout>



                                        </TableRow>


                                    </TableLayout>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>


                        </LinearLayout>






                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
