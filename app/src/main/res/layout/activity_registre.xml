<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/back"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="30sp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="150sp"
                android:layout_height="150sp"
                app:srcCompat="@drawable/logo" />


            <TextView
                android:id="@+id/txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/arial"
                android:text="Bienvenue..."
                android:textColor="@color/colorPrimary"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/txt5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/light"
                android:gravity="center"
                android:text="Merci de vous inscrire ."
                android:textColor="#A5A8B3"
                android:textSize="19sp" />


            <EditText
                android:id="@+id/Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:background="@drawable/effet_gris"
                android:fontFamily="@font/arial"
                android:hint="Utilisateur *"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:padding="20dp"
                android:textColor="@color/gris6"
                android:textColorHint="#b1b3bf"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/effet_gris"
                android:fontFamily="@font/arial"
                android:hint="Mot de passe *"
                android:inputType="textPassword"
                android:padding="20dp"
                android:textColor="@color/gris6"
                android:textColorHint="#b1b3bf"
                android:textSize="18sp" />


            <com.dx.dxloadingbutton.lib.LoadingButton
                android:id="@+id/loading_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                app:lb_btnDisabledColor="@color/colorPrimary"
                app:lb_btnRippleColor="@color/colorPrimary"
                app:lb_btnText="Inscription"

                app:lb_disabledTextColor="@color/colorPrimary"
                app:lb_resetAfterFailed="true"
                app:lb_rippleEnable="true" />


        </LinearLayout>
    </LinearLayout>


    <View
        android:id="@+id/animate_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"


        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/bold"
        android:gravity="center"
        android:id="@+id/createText"
        android:text="Vous avez dÃ©ja un compte ?"
        android:textColor="#A5A8B3"
        android:textSize="14sp" />

</RelativeLayout>